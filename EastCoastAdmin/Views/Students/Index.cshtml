@model IEnumerable<EastCoastAdmin.Models.StudentViewModel>

@{
    ViewData["Title"] = "Studenter";
}
<div class="text-center">
<h3>Studenter</h3>
</div>
<table class="table">
    <thead>
        <tr>
@*            <th>
                @Html.DisplayNameFor(model => model.StudentId)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobilePhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
@*            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobilePhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                    @Html.ActionLink("Editera", "Edit","Students", new { id = item.StudentId }) |
                    @Html.ActionLink("Detaljer", "Details","Students", new { id = item.StudentId }) |
                    @Html.ActionLink("Radera", "Delete","Students", new { id = item.StudentId })
            </td>
        </tr>
}
    </tbody>
</table>
@Html.ActionLink("Lägg till ny student", "Add", "Students")