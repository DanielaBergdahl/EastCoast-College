@model IEnumerable<EastCoastAdmin.Models.CourseViewModel>

@{
    ViewData["Title"] = "Studentwebb";
}


<div class="text-center">
    <h4 class="display-4">Kursregistrering</h4>
    <br />
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Välj kurskategori:
                @Html.DropDownList("CategorySearchString", new SelectList(Model.Select(model => model.Category).Distinct()), "<Alla>", new {onchange = "submit()"})
            </p>
        </div>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CourseNumber)</th>
                <th>@Html.DisplayNameFor(model => model.CourseTitle)</th>
                <th>@Html.DisplayNameFor(model => model.CourseLength)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CourseNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.CourseTitle)</td>
                    <td>@Html.DisplayFor(modelItem => item.CourseLength)</td>
                    <td>
                        @Html.ActionLink("Kursdetaljer", "Index","CourseDetails", new { id = item.CourseId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
